/* pages/travel/travel.wxss */
.container {
  padding-top: 112rpx;
  padding-bottom: 120rpx;
  background-color: #FFFFFF;
}

.nav-bar {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  height: 112rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 0 32rpx;
  background-color: #FFFFFF;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.05);
  z-index: 1000;
}

.nav-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333333;
}

.main-content {
  padding: 40rpx 32rpx;
}

.map-section {
  margin-bottom: 48rpx;
}

.section-title {
  font-size: 36rpx;
  font-weight: 600;
  color: #333333;
  margin-bottom: 24rpx;
  display: block;
}

.map-container {
  border-radius: 24rpx;
  height: 384rpx;
  width: 100%;
  overflow: hidden;
  position: relative;
  background-image: url('https://ai-public.mastergo.com/gen_page/map_placeholder_1280x720.png');
  background-size: cover;
  background-position: center;
}

.map-overlay {
  position: absolute;
  inset: 0;
  background-color: rgba(0, 0, 0, 0.2);
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.map-tip {
  background-color: #FFFFFF;
  border-radius: 16rpx;
  padding: 24rpx;
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.1);
  text-align: center;
  max-width: 80%;
  margin-bottom: 24rpx;
}

.map-tip text {
  font-size: 28rpx;
  font-weight: 500;
  color: #333333;
}

.view-all-link {
  position: absolute;
  bottom: 16rpx;
  right: 16rpx;
  color: #4CAF50;
  text-decoration: underline;
  font-size: 24rpx;
}

.routes-section {
  margin-bottom: 40rpx;
}

.route-card {
  background: linear-gradient(135deg, #FFF8E1 0%, #FFFFFF 100%);
  border-radius: 24rpx;
  padding: 32rpx;
  margin-bottom: 32rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.05);
}

.route-header {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  margin-bottom: 16rpx;
}

.route-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333333;
}

.route-duration {
  font-size: 24rpx;
  color: #999999;
  background-color: #FFFFFF;
  padding: 8rpx 16rpx;
  border-radius: 8rpx;
}

.route-desc {
  font-size: 28rpx;
  color: #666666;
  margin-bottom: 24rpx;
  display: block;
}

.route-tags {
  display: flex;
  flex-wrap: wrap;
  gap: 16rpx;
  margin-bottom: 32rpx;
}

.tag {
  font-size: 24rpx;
  padding: 8rpx 16rpx;
  background-color: rgba(212, 175, 55, 0.1);
  color: #D4AF37;
  border-radius: 8rpx;
}

.route-btn {
  width: 100%;
  padding: 20rpx;
  background: linear-gradient(135deg, #4CAF50 0%, #D4AF37 100%);
  color: #FFFFFF;
  border-radius: 8rpx;
  font-size: 28rpx;
  font-weight: 500;
  border: none;
}

