/* pages/shop/shop.wxss */
.container {
  padding-top: 120rpx;
  padding-bottom: 120rpx;
  background-color: #FFFFFF;
}

.nav-bar {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  width: 100%;
  background-color: #FFFFFF;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.05);
  padding: 24rpx 32rpx;
  z-index: 1000;
  display: flex;
  align-items: center;
}

.logo-text {
  font-size: 32rpx;
  color: #D4AF37;
  margin-right: 32rpx;
  font-weight: bold;
}

.search-box {
  flex: 1;
  display: flex;
  align-items: center;
  background-color: rgba(76, 175, 80, 0.1);
  border-radius: 40rpx;
  padding: 24rpx 32rpx;
}

.search-icon {
  font-size: 32rpx;
  margin-right: 16rpx;
}

.search-text {
  font-size: 28rpx;
  color: #666666;
}

.main-content {
  padding: 40rpx 32rpx;
}

.category-section {
  margin-bottom: 60rpx;
}

.section-title {
  font-size: 36rpx;
  font-weight: 600;
  color: #333333;
  margin-bottom: 24rpx;
  display: block;
}

.category-grid {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 32rpx;
}

.category-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  background-color: #FFFFFF;
  border-radius: 16rpx;
  padding: 32rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.05);
}

.category-icon {
  width: 128rpx;
  height: 128rpx;
  border-radius: 24rpx;
  margin-bottom: 16rpx;
}

.category-text {
  font-size: 28rpx;
  color: #333333;
}

.product-section {
  margin-bottom: 40rpx;
}

.product-grid {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 32rpx;
}

.product-card {
  background-color: #FFFFFF;
  border-radius: 24rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.05);
  overflow: hidden;
}

.product-image {
  width: 100%;
  height: 320rpx;
}

.product-info {
  padding: 24rpx;
}

.product-name {
  font-size: 28rpx;
  font-weight: 500;
  color: #333333;
  margin-bottom: 16rpx;
  display: block;
}

.product-price {
  font-size: 28rpx;
  color: #D4AF37;
  font-weight: 500;
  margin-bottom: 16rpx;
  display: block;
}

.buy-btn {
  width: 100%;
  padding: 16rpx;
  background-color: #4CAF50;
  color: #FFFFFF;
  border-radius: 8rpx;
  font-size: 24rpx;
  border: none;
  margin-top: 16rpx;
}

.fab-button {
  position: fixed;
  bottom: 160rpx;
  right: 40rpx;
  width: 112rpx;
  height: 112rpx;
  background-color: #D4AF37;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.15);
  z-index: 100;
}

.fab-icon {
  font-size: 48rpx;
}

.cart-badge {
  position: absolute;
  top: -10rpx;
  right: -10rpx;
  background-color: #ff4444;
  color: #FFFFFF;
  border-radius: 50%;
  min-width: 40rpx;
  height: 40rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 20rpx;
  font-weight: bold;
  padding: 0 8rpx;
}

