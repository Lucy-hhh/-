/* pages/baike-detail/baike-detail.wxss */
.container {
  padding-top: 140rpx;
  padding-bottom: 40rpx;
  background-color: #F5F5F5;
}

.back-button {
  position: fixed;
  top: 140rpx;
  left: 32rpx;
  z-index: 100;
  width: 80rpx;
  height: 80rpx;
  background-color: rgba(255, 255, 255, 0.9);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.1);
}

.back-button text {
  font-size: 40rpx;
  color: #333333;
}

.header-image {
  width: 100%;
  height: 400rpx;
}

.content-section {
  background-color: #FFFFFF;
  margin: 32rpx;
  padding: 40rpx;
  border-radius: 24rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.05);
}

.baike-title {
  font-size: 48rpx;
  font-weight: bold;
  color: #333333;
  margin-bottom: 16rpx;
  display: block;
}

.baike-subtitle {
  font-size: 28rpx;
  color: #999999;
  margin-bottom: 32rpx;
  display: block;
}

.highlight-box {
  background: linear-gradient(135deg, #FFF9E6 0%, #FFFFFF 100%);
  border-left: 8rpx solid #D4AF37;
  padding: 32rpx;
  border-radius: 16rpx;
}

.highlight-text {
  font-size: 28rpx;
  color: #666666;
  line-height: 1.6;
}

.section-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333333;
  margin-bottom: 32rpx;
  display: block;
  padding-bottom: 16rpx;
  border-bottom: 4rpx solid #FACC15;
}

.info-list {
  display: flex;
  flex-direction: column;
  gap: 24rpx;
}

.info-item {
  line-height: 1.6;
}

.info-label {
  font-weight: 600;
  color: #666666;
  margin-right: 16rpx;
}

.info-value {
  color: #333333;
}

.stat-grid {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 24rpx;
  margin-top: 32rpx;
}

.stat-item {
  background-color: #F9F9F9;
  padding: 24rpx;
  border-radius: 16rpx;
  text-align: center;
}

.stat-number {
  font-size: 48rpx;
  font-weight: bold;
  color: #4CAF50;
  margin-bottom: 8rpx;
  display: block;
}

.stat-label {
  font-size: 24rpx;
  color: #666666;
}

.section-content {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.section-text {
  font-size: 28rpx;
  color: #666666;
  line-height: 1.6;
}

