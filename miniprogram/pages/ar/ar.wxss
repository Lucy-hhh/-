/* pages/ar/ar.wxss */
.container {
  position: relative;
  width: 100%;
  min-height: 100vh;
  background-color: #FFFFFF;
  overflow: hidden;
}

.back-btn {
  position: absolute;
  top: 32rpx;
  left: 32rpx;
  z-index: 20;
  width: 80rpx;
  height: 80rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 50%;
  background-color: rgba(255, 255, 255, 0.8);
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.1);
}

.back-btn text {
  font-size: 40rpx;
  color: #333333;
}

.map-controls {
  position: absolute;
  top: 160rpx;
  right: 32rpx;
  z-index: 20;
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.control-btn {
  width: 80rpx;
  height: 80rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 50%;
  background-color: rgba(255, 255, 255, 0.9);
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.1);
}

.control-btn text {
  font-size: 40rpx;
}

.map-container {
  position: absolute;
  inset: 0;
  z-index: 0;
  background-color: #E0E0E0;
  display: flex;
  align-items: center;
  justify-content: center;
}

.map-placeholder {
  font-size: 28rpx;
  color: #999999;
}

.bottom-panel {
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  z-index: 10;
  padding-bottom: 48rpx;
  padding-left: 32rpx;
  padding-right: 32rpx;
}

.panel-content {
  background-color: rgba(255, 255, 255, 0.9);
  backdrop-filter: blur(20rpx);
  border-radius: 32rpx;
  box-shadow: 0 -8rpx 32rpx rgba(0, 0, 0, 0.1);
  padding: 32rpx;
  display: flex;
  flex-direction: column;
  gap: 32rpx;
}

.scene-desc {
  text-align: center;
  font-size: 28rpx;
  color: #666666;
  font-weight: 500;
  padding: 16rpx;
}

.scene-selector {
  display: flex;
  justify-content: space-between;
  gap: 24rpx;
}

.scene-card {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 24rpx;
  border-radius: 24rpx;
  background-color: #FFFFFF;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.05);
}

.scene-card.active {
  transform: scale(1.05);
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.1);
}

.scene-icon {
  width: 128rpx;
  height: 128rpx;
  margin-bottom: 16rpx;
  overflow: hidden;
  border-radius: 50%;
  background-color: #F0F0F0;
  display: flex;
  align-items: center;
  justify-content: center;
}

.scene-icon image {
  width: 100%;
  height: 100%;
}

.scene-name {
  font-size: 24rpx;
  color: #666666;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

.ar-button {
  width: 100%;
  padding: 24rpx;
  background-color: #4CAF50;
  color: #FFFFFF;
  border-radius: 8rpx;
  font-size: 32rpx;
  font-weight: 600;
  border: none;
}

