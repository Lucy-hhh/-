/* pages/profile/profile.wxss */
.container {
  padding-top: 112rpx;
  padding-bottom: 120rpx;
  background-color: #F9F9F9;
}

.nav-bar {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  height: 112rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background-color: #FFFFFF;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.05);
  z-index: 1000;
}

.nav-title {
  font-size: 40rpx;
  font-weight: bold;
  color: #333333;
}

.content-area {
  padding: 40rpx 32rpx;
}

.user-card {
  background-color: #FFFFFF;
  border-radius: 32rpx;
  padding: 48rpx;
  margin-bottom: 32rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.05);
}

.user-info {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.user-avatar {
  width: 160rpx;
  height: 160rpx;
  border-radius: 50%;
  border: 6rpx solid #4CAF50;
  margin-bottom: 32rpx;
}

.user-details {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-bottom: 32rpx;
}

.user-name {
  font-size: 40rpx;
  font-weight: 600;
  color: #333333;
  margin-bottom: 16rpx;
}

.user-phone {
  font-size: 28rpx;
  color: #666666;
}

.user-actions {
  display: flex;
  gap: 24rpx;
}

.edit-btn {
  padding: 16rpx 32rpx;
  background-color: #D4AF37;
  color: #FFFFFF;
  border-radius: 9999rpx;
  font-size: 28rpx;
  border: none;
}

.logout-btn {
  padding: 16rpx 32rpx;
  background-color: transparent;
  border: 2rpx solid #E0E0E0;
  color: #666666;
  border-radius: 9999rpx;
  font-size: 28rpx;
}

.data-card {
  background: linear-gradient(135deg, #FFF9E6 0%, #FFFFFF 100%);
  border: 2rpx solid #F0F0F0;
  border-radius: 32rpx;
  padding: 40rpx;
  margin-bottom: 32rpx;
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.03);
}

.card-title {
  font-size: 36rpx;
  font-weight: 600;
  color: #795548;
  margin-bottom: 32rpx;
  display: block;
}

.stats-grid {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 32rpx;
  text-align: center;
}

.stat-item {
  display: flex;
  flex-direction: column;
}

.stat-number {
  font-size: 48rpx;
  font-weight: bold;
  color: #795548;
  margin-bottom: 8rpx;
}

.stat-label {
  font-size: 24rpx;
  color: #999999;
}

.order-card {
  background-color: #FFFFFF;
  border-radius: 32rpx;
  padding: 32rpx;
  margin-bottom: 32rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.05);
}

.card-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 32rpx;
  padding-bottom: 24rpx;
  border-bottom: 2rpx solid #F0F0F0;
}

.view-all {
  font-size: 28rpx;
  color: #999999;
}

.order-tabs {
  display: grid;
  grid-template-columns: repeat(4, 1fr);
  text-align: center;
}

.order-tab {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.tab-icon-wrapper {
  position: relative;
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 16rpx;
}

.tab-icon-wrapper:nth-child(1) .tab-icon-wrapper {
  background-color: rgba(33, 150, 243, 0.1);
}

.tab-icon {
  font-size: 40rpx;
}

.tab-badge {
  position: absolute;
  top: -10rpx;
  right: -10rpx;
  background-color: #ff4444;
  color: #FFFFFF;
  border-radius: 50%;
  min-width: 40rpx;
  height: 40rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 20rpx;
  font-weight: bold;
  padding: 0 8rpx;
}

.tab-label {
  font-size: 24rpx;
  color: #666666;
  margin-bottom: 8rpx;
}

.tab-count {
  font-size: 24rpx;
  color: #999999;
}

.function-card {
  background-color: #FFFFFF;
  border-radius: 32rpx;
  overflow: hidden;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.05);
}

.function-item {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 32rpx;
  border-bottom: 2rpx solid #F0F0F0;
}

.function-item:last-child {
  border-bottom: none;
}

.function-left {
  display: flex;
  align-items: center;
}

.function-icon {
  font-size: 48rpx;
  margin-right: 24rpx;
}

.function-text {
  font-size: 32rpx;
  color: #333333;
}

.function-arrow {
  font-size: 32rpx;
  color: #CCCCCC;
}

