/**app.wxss**/
page {
  margin: 0;
  padding: 0;
  box-sizing: border-box;
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, 'Open Sans', 'Helvetica Neue', sans-serif;
  background-color: #FFFFFF;
  color: #333333;
  font-size: 28rpx;
  line-height: 1.6;
}

/* 主题色 */
.primary-color {
  color: #D4AF37;
}

.secondary-color {
  color: #4CAF50;
}

.primary-bg {
  background-color: #D4AF37;
}

.secondary-bg {
  background-color: #4CAF50;
}

/* 通用按钮样式 */
.btn {
  padding: 24rpx 48rpx;
  border-radius: 8rpx;
  font-size: 28rpx;
  text-align: center;
  border: none;
}

.btn-primary {
  background-color: #4CAF50;
  color: #FFFFFF;
}

.btn-secondary {
  background-color: #D4AF37;
  color: #FFFFFF;
}

.btn-outline {
  background-color: transparent;
  border: 2rpx solid #D4AF37;
  color: #D4AF37;
}

/* 卡片样式 */
.card {
  background-color: #FFFFFF;
  border-radius: 24rpx;
  box-shadow: 0 4rpx 24rpx rgba(0, 0, 0, 0.05);
  overflow: hidden;
}

/* 通用间距 */
.mt-small {
  margin-top: 20rpx;
}

.mt-medium {
  margin-top: 40rpx;
}

.mt-large {
  margin-top: 60rpx;
}

.mb-small {
  margin-bottom: 20rpx;
}

.mb-medium {
  margin-bottom: 40rpx;
}

.mb-large {
  margin-bottom: 60rpx;
}

.p-small {
  padding: 20rpx;
}

.p-medium {
  padding: 40rpx;
}

.p-large {
  padding: 60rpx;
}

/* 文本样式 */
.text-center {
  text-align: center;
}

.text-bold {
  font-weight: bold;
}

.text-small {
  font-size: 24rpx;
}

.text-medium {
  font-size: 28rpx;
}

.text-large {
  font-size: 32rpx;
}

.text-xlarge {
  font-size: 36rpx;
}

/* 布局 */
.flex {
  display: flex;
}

.flex-column {
  flex-direction: column;
}

.flex-center {
  justify-content: center;
  align-items: center;
}

.flex-between {
  justify-content: space-between;
}

.flex-around {
  justify-content: space-around;
}

.flex-1 {
  flex: 1;
}

/* 圆角 */
.rounded-sm {
  border-radius: 8rpx;
}

.rounded-md {
  border-radius: 16rpx;
}

.rounded-lg {
  border-radius: 24rpx;
}

.rounded-full {
  border-radius: 9999rpx;
}

