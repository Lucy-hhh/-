/* pages/login/login.wxss */
.login-container {
  min-height: 100vh;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  position: relative;
  padding-bottom: 160rpx;
  background: linear-gradient(135deg, #f5f9e8 0%, #e8f3c8 100%);
}

.natural-bg {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  opacity: 0.15;
  z-index: -1;
}

.main-content {
  width: 100%;
  padding: 60rpx 48rpx 48rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-top: 80rpx;
}

.logo-section {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-bottom: 80rpx;
}

.logo-wrapper {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.logo-circle {
  position: relative;
  width: 160rpx;
  height: 160rpx;
  border-radius: 50%;
  background: linear-gradient(135deg, #8BC34A 0%, #D4AF37 100%);
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 8rpx 16rpx rgba(0, 0, 0, 0.1);
  margin-bottom: 24rpx;
}

.logo-icon {
  font-size: 64rpx;
  color: #FFFFFF;
}

.logo-badge {
  position: absolute;
  bottom: -8rpx;
  right: -8rpx;
  width: 48rpx;
  height: 48rpx;
  background-color: #FFFFFF;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 4rpx 8rpx rgba(0, 0, 0, 0.1);
}

.badge-icon {
  font-size: 32rpx;
  color: #8BC34A;
}

.logo-text {
  font-size: 48rpx;
  color: #8BC34A;
  font-weight: bold;
  margin-top: 24rpx;
  margin-bottom: 16rpx;
}

.logo-subtitle {
  font-size: 28rpx;
  color: #666666;
}

.input-section {
  width: 100%;
  margin-bottom: 48rpx;
}

.input-wrapper {
  position: relative;
  margin-bottom: 32rpx;
}

.code-wrapper {
  display: flex;
  align-items: center;
}

.input-field {
  width: 100%;
  padding: 24rpx 32rpx;
  border: 2rpx solid rgba(139, 195, 74, 0.2);
  border-radius: 16rpx;
  background-color: rgba(255, 255, 255, 0.7);
  font-size: 28rpx;
  color: #333333;
}

.code-wrapper .input-field {
  flex: 1;
  margin-right: 16rpx;
}

.code-btn {
  padding: 24rpx 32rpx;
  background-color: rgba(255, 235, 59, 0.3);
  color: #D4AF37;
  border-radius: 8rpx;
  font-size: 24rpx;
  font-weight: 500;
  border: none;
  white-space: nowrap;
}

.code-btn.disabled {
  background-color: #F5F5F5;
  color: #999999;
}

.login-btn {
  width: 100%;
  padding: 24rpx;
  background-color: #8BC34A;
  color: #FFFFFF;
  border-radius: 8rpx;
  font-size: 28rpx;
  font-weight: 500;
  margin-bottom: 32rpx;
  border: none;
  display: flex;
  align-items: center;
  justify-content: center;
}

.wechat-btn {
  width: 100%;
  padding: 24rpx;
  background-color: #07c160;
  color: #FFFFFF;
  border-radius: 8rpx;
  font-size: 28rpx;
  font-weight: 500;
  margin-bottom: 32rpx;
  border: none;
  display: flex;
  align-items: center;
  justify-content: center;
}

.wechat-icon {
  font-size: 40rpx;
  margin-right: 16rpx;
}

.register-link {
  text-align: center;
}

.link-text {
  color: #8BC34A;
  font-size: 28rpx;
  font-weight: 500;
}

.agreement-section {
  position: absolute;
  bottom: 32rpx;
  left: 0;
  right: 0;
  text-align: center;
  font-size: 24rpx;
  color: #666666;
  padding: 0 48rpx;
}

.agreement-link {
  color: #8BC34A;
  text-decoration: underline;
}

